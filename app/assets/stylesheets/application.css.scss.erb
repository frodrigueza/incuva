html{
	
}
h1, h2, h3, h4{
	margin-top: 0px;
	color: #444;
}

body{
	font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
	color: #004964;
	a:hover{
		color: #e30043;
	}
}

#home{
	float: none;
	width: 1000px;
	margin-right: auto;
	margin-left: auto;
	font-size: 14px;
}
a{
	text-decoration: none;	
	color: #004964;
}

div{
	float: left;
}
.full{
	width: 100%;
}
.middle{
	width: 50%;
}
.padder{
	float: none;
	padding: 10px;
}
div{
	float: left;
}
.span10{
	width: 10%;
}
.span20{
	width: 20%;
}
.span25{
	width: 25%;
}
.span30{
	width: 30%;
}
.span40{
	width: 40%;
}
.span50{
	width: 50%;
}
.span60{
	width: 60%;
}
.span70{
	width: 70%;
}
.span80{
	width: 80%;
}
.span90{
	width: 90%;
}
.separator{
	width: 100%;
	border-top: 1px dashed 	#004964;
	margin-top: 20px;
	margin-bottom: 20px;
}
.option{
	cursor: pointer;
}
.option:hover{
	color: #e30043;
}

/*nav level*/
.nav-level:hover{
	color: #e30043;
	cursor: pointer;
}

/*notices*/
.notice{
	margin-bottom: 50px;

	.notice_header{
		border-bottom: 1px dashed #444;
		margin-bottom: 5px;
		/*color: #444;*/

		.notice_title{
			width: 80%;
			font-weight: bold;
			padding-bottom: 5px;
		}
		.notice_date{
			width: 20%;
			text-align: right;
			font-size: 12px;
			font-style: italic;
		}
	}
	.notice_body{
		img{
			float: left;
			margin-right: 5px;
			margin-bottom: 5px;
			max-width: 300px;
			min-width: 200px;
			max-height: 300px;
			border: 3px solid #444;
		}
		text-align: justify;
	}
	.notice_link{
		text-align: right;
	}
}

/*social*/
.logo_social img{
	width: 30px;
	margin-right: 30px;
}


/*Header*/
#title{
	border-bottom: 1px solid #004964;
	margin-top: 50px;
	font-size: 20px;

	td{
		padding: 25px 0px;
	}
	a{
		font-weight: bold;
	}
	#logo_principal{
		width: 280px;
	}
}

/*session*/
#session{
	color: white;
	background-color: #004964;
	position: absolute;
	left: 0;
	top: 0;

	a{
		color: white;
		font-weight: bold;
	}
	a:hover{
		color:#e30043;
	}

	#session_table_div{
		width: 1000px;
	margin-left: auto;
	margin-right: auto;
	float: none;

		table{
			float: right;
			text-align: right;
		}
	}
}



/*menu_bar_1*/

#menu_bar_1{

	#menu_bar_1_table{
		td{
			padding: 30px 20px 30px 0px;
			font-weight: bold;
		}
	}
}


/*site_categories*/
#info_div{
	border-bottom: 1px solid #004964;
}
#site_categories{

	 img{
	 	width: 15px;
	 }

	 .level{
	 	margin-left: 10px;
	 }

	 .padder{
	 	padding: 10px 0px;
	 }
}

/*loader*/
.loader {
	position: fixed;
	left: 0px;
	top: 0px;
	width: 100%;
	height: 100%;
	z-index: 9999;
	background: url('otros/page-loader.gif') 50% 50% no-repeat rgb(249,249,249);
}

/*resource*/
#resource{
	border-left: 1px solid #004964;
	min-height: 500px;

	table img{
		width: 50px;
	}
	textarea{
		width: 100%;
		height: 200px;
	}

	.article_option{
		padding: 5px 0px;
		font-weight: 700;
	}
	.div_article_option{
		background-color: antiquewhite;
		border-radius: 15px 0px;
	}
}


/*slide*/
#slide_show{

	/*padding: 10px 0px;*/

	.slide img{
		width: 100%;
	}
}

/*menu_bar_2*/
#menu_bar_2{

	border-bottom: 1px solid #004964;
	padding: 20px 0px;

	.link_to{
		padding-right: 10px;
		font-weight: bold;
	}

	img{
		width: 20px;
	}	
}

/*footer*/
#footer{
	padding: 50px 0px;
	border-top: 1px solid #004964;

}

.centered{
	margin-right: auto;
	margin-left: auto;
	float: none;
}
.text-right{
	text-align: right;
}

/*login*/
#registration_form{
	img{
		margin-right: auto;
		margin-left: auto;
	}
}

/*contact_form*/
#contact_form{
	#mensaje{
		width: 500px;
	}
}

/*single material partial*/
#single_material_table{
	.single_material_info{
		padding-bottom: 40px;
		text-align: justify;

		.material_image{
			width: 30%;
			float: left;

			img{
				width: 100%;
				outline: 3px solid #444;
			}
			.padder{
				float: none;
				padding: 0px 10px 0px 0px;
			}
		}
		.material_title{
			font-weight: bold;
			width: 70%;
			margin-bottom: 20px;
		}
		.material_description{
			padding-top: 30px;
			margin-bottom: 40px; 
		}
	}
}