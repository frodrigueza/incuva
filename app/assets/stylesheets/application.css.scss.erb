/*social*/
.logo_social img{
	width: 30px;
	margin-right: 30px;
}


/*Header*/
#title{
	border-bottom: 1px solid #004964;
	margin-top: 50px;
	/*font-weight: bold;*/
	font-size: 20px;

	td{
		padding: 25px 0px;
	}
	a{
		font-weight: bold;
	}
	#logo_principal{
		width: 280px;
	}
}

/*session*/
#session{
	color: white;
	background-color: #004964;
	position: absolute;
	left: 0;
	top: 0;

	a{
		color: white;
	}

	#session_table_div{
		width: 1000px;
	margin-left: auto;
	margin-right: auto;
	float: none;

		table{
			float: right;
			text-align: right;
		}
	}
}



/*menu_bar_1*/

#menu_bar_1{

	#menu_bar_1_table{
		td{
			padding: 30px 0px 30px 20px;
			font-weight: bold;
		}
	}
}
.padder{
	float: none;
	padding: 10px;
}


/*site_categories*/
#site_categories{

	
	 img{
	 	width: 15px;
	 }

	 .level{
	 	margin-left: 40px;
	 }

	 .padder{
	 	padding: 10px 0px;
	 }
}

/*resource*/
#resource{
	border-left: 1px solid #004964;
	min-height: 500px;

	img{
		width: 10px;
	}
	input{
		width: 100%;
	}
	textarea{
		width: 100%;
		height: 200px;
	}
}


/*slide*/
.slide img{
	width: 100%;
}

/*menu_bar_2*/
#menu_bar_2{

	border-bottom: 1px solid #004964;
