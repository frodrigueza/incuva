$('#article_contents_table_<%= @content.article.id %>').append('<%= escape_javascript(render "content", :locals => {:content_id => @content.id}) %>');
$("a.fancybox").fancybox();

$(".fancybox-video").click(function() {
	$.fancybox({
		'padding'		: 0,
		'autoScale'		: false,
		'transitionIn'	: 'none',
		'transitionOut'	: 'none',
		'title'			: this.title,
		'width'			: 640,
		'height'		: 385,
		'href'			: this.href.replace(new RegExp("watch\\?v=", "i"), 'v/'),
		'type'			: 'swf',
		'swf'			: {
		'wmode'				: 'transparent',
		'allowfullscreen'	: 'true'
		}
	});

	return false;
});