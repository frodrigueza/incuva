<div class="full" id="slide_show">
	<% i = 1 %>
	<% Slide.all.order(:play_order).each do |s| %>
		<div class="full slide" id="slide_<%= i%>">
			<%= link_to (image_tag s.image_url), s.link_url, {target: '_blank'} %>
		</div>
		<% i += 1%>
	<% end %>
</div>
<% if current_member.is_admin %>
	<div class="full">
		<%= link_to 'Slides', slides_path %>
		<%= link_to 'Nueva slide', new_slide_path %>
	</div>
<% end %>